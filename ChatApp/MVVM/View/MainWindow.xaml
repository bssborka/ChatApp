<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp" xmlns:viewmodel="clr-namespace:ChatClient.MVVM.Viewmodel"
        mc:Ignorable="d"
        Height="650" Width="1200"
        Background="#36393F"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>




        <!--header-->
        <Border Grid.ColumnSpan="2"
                Background="#252525"
                MouseDown="Border_MouseDown">

            <Grid>
                <Label Content="BunnyChat"
                   Foreground="Gray"
                   FontWeight="SemiBold"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Width="20" Height="20"
                            Content="―"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Click="ButtonMinimize_Click"/>
                    <Button Width="20" Height="20"
                            Content="▢"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Click="WindowStateButton_Click"/>
                    <Button Width="20" Height="20"
                            Content="✖"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--Left panel-->
        <Grid  Margin="0,30,10,-625" >
            <DockPanel>
                <StackPanel Width="200" Height="65"
                            DockPanel.Dock="Top">
                    <Border CornerRadius="25"
                            Width="30" Height="30"                            
                            Background="#3bff6f"
                        DockPanel.Dock="Top"
                        HorizontalAlignment="Left"
                        Margin="10,15,0,0"/>
                    <Border CornerRadius="5"
                            Background="#252525"
                            Height="25"                        
                         Width="120"
                            Margin="30,-25,0,0"
                         HorizontalAlignment="Center">
                        <TextBox Height="25"                        
                         Width="120"
                         HorizontalAlignment="Center"
                         Foreground="Gray"
                     DockPanel.Dock="Top"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                        BorderThickness="0"
                                 Margin="0,5,0,0"/>
                    </Border>

                </StackPanel>


                <Button Height="25"
                        Foreground="Gray"
                    DockPanel.Dock="Top"
                    Content="Connect"
                    Command="{Binding ConnectToServerCommand}"
                        Background="#252525" Width="70"
                        />
                <Label Content="Online"
                       DockPanel.Dock="Top"
                       Foreground="Gray"
                       FontWeight="Medium"/>
                <ListView ItemsSource="{Binding Users}"  
                          Background="Transparent"
                          ItemContainerStyle="{StaticResource ContactCard}">
                    <ListView.ItemTemplate >
                        <DataTemplate>
                            <TextBlock Text="{Binding Username}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>

        </Grid>
        <!--Right panel-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="#2F3136" BorderThickness="0,0,0,2">
                <Grid HorizontalAlignment="Stretch"
                      Margin="8">
                    <Label Content="Chatroom"
                           Foreground="White"
                         
                           FontWeight="Bold"
                           Margin="5,0,5,0"
                           VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <ListView Height="300"
                      ItemsSource="{Binding Messages}"
                      Background="Transparent"
                      
                      Grid.Row="1"
                      />
            <StackPanel Orientation="Horizontal">
                <TextBox Height="55"
                         Width="545"
                         VerticalContentAlignment="Center"
                         Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Width="55"
                        Content="Send"
                        Command="{Binding SendMessageCommand}"/>
            </StackPanel>
        </Grid>

